
@model IEnumerable<HospitalInformationManagementSystem.Models.Doctor>


@{
    ViewBag.Title = "List of Doctor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <head>
        <title>Admin | List Of Doctors</title>
    </head>

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Doctor</li>
        <li class="active">List of Doctor</li>
    </ol>
</div>

<h2>List of Doctor</h2>

<hr />
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Department
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a href="@Url.Action("EditDoctors", new {id = item.Id})"  class="fa fa-pencil-square-o" style="font-size: 19px"> </a> |
                <a href="@Url.Action("DoctorDetail", new {id = item.Id})" class="fa fa-info-circle" style="font-size: 19px; color: lightblue"></a>|
                <a href="@Url.Action("DeleteDoctor", new {id = item.Id})" class="fa fa-trash" style="font-size: 19px; color: red"></a>
            </td>
        </tr>
        }
    </tbody>

</table>

@section scripts {
    <script>
$(document).ready(function () {
            $("#table_id").dataTable();
        });</script>
}


