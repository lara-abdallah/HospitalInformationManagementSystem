@model HospitalInformationManagementSystem.Models.AdminViewModel
@{
    ViewBag.Title = "Index";
   
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Dashboard</li>
    </ol>
</div><!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
</div><!--/.row-->
<p class="text-success">@ViewBag.Messege</p>
<div class="panel panel-container">
    <div class="row">

        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <div class="large count">@Model.Doctors.Count()</div>
                    <div class="text-muted">Doctors</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-orange panel-widget border-right">
                <div class="row no-padding">
                    <div class="large">@Model.Patients.Count()</div>
                    <div class="text-muted">Patients</div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-teal panel-widget border-right">
                <div class="row no-padding">
                    <div class="large count">@Model.ActiveAppointments.Count()</div>
                    <div class="text-muted">Active Appointments</div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
            <div class="panel panel-blue panel-widget border-right">
                <div class="row no-padding">
                    <div class="large count">@Model.PendingAppointments.Count()</div>
                    <div class="text-muted">pending Appointments</div>
                </div>
            </div>
        </div>


    </div>
</div>
